<grid buttonwidth="210" buttonheight="23">
  <row>
    <button>
      <text>play quiz</text>
      <command>request(play, what=quiz)</command>
    </button>
    <button>
      <text>play sorting</text>
      <command>request(play, what=sorting)</command>
    </button>
  </row>
  <row>
    <button>
      <text>stop playing</text>
      <command>request(stop)</command>
    </button>
    <button>
      <text>conv filling</text>
      <command>provide(convfilling)</command>
    </button>
  </row>
  <row>
    <button>
      <text>confirm fun</text>
      <command>provide(fun, value=yes)</command>
    </button>
    <button>
      <text>disconfirm fun</text>
      <command>provide(fun, value=no)</command>
    </button>
  </row>
  <row>
    <button>
      <text>confirm meet again</text>
      <command>provide(meetAgain, value=yes)</command>
    </button>
    <button>
      <text>disconfirm meet again</text>
      <command>provide(meetAgain, value=no)</command>
    </button>
  </row>

